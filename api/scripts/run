#!/usr/bin/env bash
set -e

HERE=$(dirname $0)
. $HERE/common

PACKAGE_ROOT=$(realpath $HERE/..)

docker run -d \
  --network=host \
  --name packit-api \
  --volume $PACKAGE_ROOT/app/src/main/resources/config.properties:/etc/packit/config.properties \
  -e PACKIT_API_ROOT=http://localhost:8080 \
  "$TAG_BRANCH"
