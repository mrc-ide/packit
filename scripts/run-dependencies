#!/usr/bin/env bash

set -e

HERE=$(realpath "$(dirname $0)")
. "$HERE"/common


## Start database
if [ "$1" == "basicauth" ]; then
    "$HERE"/../db/scripts/run basicauth
else
    "$HERE"/../db/scripts/run 
fi


# Start outpack_server
docker pull $OUTPACK_SERVER_TAG
docker run --name outpack_server \
  -v $HERE/../demos/orderly:/outpack \
  -p 8000:8000 -d --rm \
  $OUTPACK_SERVER_TAG
